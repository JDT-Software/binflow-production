@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<!-- Mobile Navigation (only visible on mobile) -->
<nav class="mobile-nav d-lg-none">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center py-2">
            <div class="d-flex align-items-center">
                <button class="hamburger-btn me-3" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNavDropdown" aria-expanded="false" aria-controls="mobileNavDropdown">
                    <i class="bi bi-list"></i>
                </button>
                <h5 class="mb-0 text-white fw-bold">BinFlow</h5>
            </div>
            <div class="text-white">
                <small>@DateTime.Now.ToString("HH:mm")</small>
            </div>
        </div>
        
        <div class="collapse" id="mobileNavDropdown">
            <div class="mobile-nav-dropdown">
                <a href="/" class="mobile-nav-item">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Home</span>
                </a>
                <a href="/hourly-entry" class="mobile-nav-item">
                    <i class="bi bi-clock-history"></i>
                    <span>Hourly Entry</span>
                </a>
                <a href="/reports" class="mobile-nav-item">
                    <i class="bi bi-clipboard-data"></i>
                    <span>Shift Reports</span>
                </a>
                <a href="/dashboard" class="mobile-nav-item">
                    <i class="bi bi-bar-chart-line-fill"></i>
                    <span>Dashboard</span>
                </a>
                <div class="p-3 border-top border-secondary">
                    <small class="text-light opacity-75">
                        <i class="bi bi-circle-fill text-success me-2"></i>
                        System Online • @DateTime.Now.ToString("dd/MM/yyyy")
                    </small>
                </div>
            </div>
        </div>
    </div>
</nav>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>